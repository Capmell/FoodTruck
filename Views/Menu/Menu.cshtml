<h1>Location</h1>
@if (Model == null || Model.Count == 0)
{
    <p><em>No Locations found.</em></p>
}
else
{
    <ul>
        @foreach (var Location in Model)
        {
            <li>
                <strong>@Location.Id</strong> by @Location.Town — $@Location.Street
            </li>
        }
    </ul>
}
@{
}
