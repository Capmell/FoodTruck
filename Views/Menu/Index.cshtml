<h1>Menu</h1>

@if (Model == null || Model.Count == 0)
{
    <p><em>No items found.</em></p>
}
else
{
    <ul>
        @foreach (var Menu in Model)
        {
            <li>
                <strong>@Menu.Id</strong> by @Menu.Food — $@Menu.Drink
            </li>
        }
    </ul>
}
@{
}
